
<%= form_tag("/users/#{@user.id}", method: "PUT") do %>
  <%= label_tag(:username, "Username:") %>
  <%= text_field_tag(:username, @user.username) %><br><br>
  <%= label_tag(:email, "Email:") %>
  <%= email_field_tag 'email', @user.email %><br><br>
  <%= label_tag(:password, "Password:") %>
  <%= password_field_tag 'password', @user.password %><br><br>
  <%= submit_tag("Save") %>
<% end %>
