<h1>New</h1>
<% if false %>
 <form action="<%= users_path %>" method="post" accept-charset="UTF-8">
 <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label for="username">Username:</label>
  <input type="text" id="username" name="user[username]"><br><br>
  <label for="email">email:</label>
  <input type="email" id="email" name="user[email]"><br><br>
    <label for="password">Password:</label>
  <input type="password" id="password" name="user[password]"><br><br>
  <input type="submit" value="Submit">
</form>
<% end %>

<% if false %>
<%= form_tag(users_path) do %>
  <%= label_tag("user[username]", "Username:") %>
  <%= text_field_tag("user[username]") %><br><br>
  <%= label_tag("user[email]", "Email:") %>
  <%= email_field_tag "user[email]" %><br><br>
  <%= label_tag("user[password]", "Password:") %>
  <%= password_field_tag "user[password]" %><br><br>
  <%= submit_tag("Save") %>
<% end %>
<% end %>

<%= form_for(@user) do |f| %>
  <p>
    <%= f.label :Username %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.email_field :email, placeholder: 'email@gmail.com' %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
